{
  "name": "comptes-sur-moi",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "autoprefixer": "^10.4.22",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "description": "Application de gestion de comptes personnels avec sauvegarde locale et restauration.",
  "author": "Christophe <optimalus.christophe@gmail.com>",
  "build": {
    "appId": "com.comptessurmoi.app",
    "productName": "Comptes Sur Moi",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "icon": "Logo-Comptes-Sur-Moi.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
